<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.youngbear.mapper.PicTagMapper">
  <resultMap id="BaseResultMap" type="cn.youngbear.pojo.PicTag">
    <result column="pic_id" jdbcType="VARCHAR" property="picId" />
    <result column="tag_id" jdbcType="BIGINT" property="tagId" />
  </resultMap>
  <insert id="insert" parameterType="cn.youngbear.pojo.PicTag">
    insert IGNORE into pic_tag (pic_id, tag_id)
    values (#{picId,jdbcType=VARCHAR}, #{tagId,jdbcType=BIGINT})
  </insert>
  <insert id="insertSelective" parameterType="cn.youngbear.pojo.PicTag">
    insert IGNORE  into pic_tag values
      <foreach collection="tagList" item="tag"  separator=",">
        (#{picId,jdbcType=VARCHAR},#{tag.tagId,jdbcType=VARCHAR})
      </foreach>
  </insert>
  <delete id="deleteByPicId" parameterType="java.lang.String">
      delete from pic_tag where pic_id = #{picId}
  </delete>

  <insert id="insertWithList" parameterType="cn.youngbear.pojo.PicTag">
    insert IGNORE  into pic_tag (pic_id, tag_id)
    values
    <foreach collection="list" separator="," item="picTag">
      (
        #{picTag.picId},
        #{picTag.tagId}
      )
    </foreach>
  </insert>

  <select id="selctCountWithTagPic" parameterType="cn.youngbear.pojo.PicTag" resultType="int">
    select count(*) from pic_tag where pic_id = #{picId} and tag_id = #{tagId}
  </select>


</mapper>